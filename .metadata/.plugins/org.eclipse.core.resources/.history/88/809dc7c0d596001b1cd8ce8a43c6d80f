package co.edu.usbcali.viajes.app.service;

import co.edu.usbcali.viajes.app.domain.Cliente;
import co.edu.usbcali.viajes.app.domain.Destino;

public class ClienteServiceImpl implements ClienteService{

	@Override
	public void guardarCliente(Cliente cliente) throws Exception {
		if(cliente.getIdClie() == null ) {
			throw new Exception("debeingresar un id valido");
		}
		if(cliente.getNumeroIdentificacion() == null || cliente.getNumeroIdentificacion() == "" || cliente.getNumeroIdentificacion().length() > 15 ) {
			throw new Exception("numero identificacion no valido");
		}
		if(cliente.getPrimerApellido() == null || cliente.getPrimerApellido() == "" ||  cliente.getPrimerApellido().length() > 100) {
			throw new Exception("apellido no valido");
		}
		if(cliente.getSegundoApellido() == null || cliente.getSegundoApellido() == "" || cliente.getSegundoApellido().length() > 100) {
			throw new Exception("apellido no valido");
		}
		if(cliente.getNombre() == null || cliente.getNombre() == "" || cliente.getNombre().length() > 100) {
			throw new Exception("nombre no valido");
		}
		if(cliente.getTelefono1() == null || cliente.getTelefono1() == "" || cliente.getTelefono1().length() > 15 ) {
			throw new Exception("telefono1 no valido");
		}
		if(cliente.getTelefono2() == null || cliente.getTelefono2() == "" || cliente.getTelefono2().length() > 15 ) {
			throw new Exception("telefono2 no valido");
		}
		if(cliente.getCorreo() == null || cliente.getCorreo() == "" || cliente.getCorreo().length() > 50) {
			throw new Exception("correo no valido");
		}
		if(cliente.getSexo() == null || cliente.getSexo() == "" || cliente.getSexo().length() > 1) {
			throw new Exception("sexo no valido");
		}
		if(cliente.getFechaNacimiento() == null ) {
			throw new Exception("fecha nacimiento no valida");
		}
		if(cliente.getFechaModificacion() == null ) {
			throw new Exception("fecha modificacion no valida");
		}
		if(cliente.getFechaCreacion() == null ) {
			throw new Exception("fecha creacion no valida");
		}
		if(cliente.getUsuCreador() == null || cliente.getUsuCreador() == "" || cliente.getUsuCreador().length() > 10) {
			throw new Exception("usuario creador no valido");
		}
		if(cliente.getUsuModificador() == null || cliente.getUsuModificador() == "" || cliente.getUsuModificador().length() > 10) {
			throw new Exception("usuario Modificador creador no valido");
		}
		if(cliente.getEstado() == null || cliente.getEstado() == "" || cliente.getEstado().length() > 1) {
			throw new Exception("estado no valido");
		}
		
	}

	@Override
	public void eliminarCliente(Cliente cliente) throws Exception {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void actualizarCliente(Cliente cliente) throws Exception {
		// TODO Auto-generated method stub
		
	}

	@Override
	public Destino consultarCliente(int cliente) throws Exception {
		// TODO Auto-generated method stub
		return null;
	}

}
